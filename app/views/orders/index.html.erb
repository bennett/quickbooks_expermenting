<h1>Listing orders</h1>

<table>
  <tr>
    <th>Descrption</th>
    <th>Starts on</th>
    <th>Ends on</th>
    <th>Customer</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.descrption %></td>
    <td><%=h order.starts_on %></td>
    <td><%=h order.ends_on %></td>
    <td><%= link_to order.customer.name, "/customers/#{order.customer.id}" %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New order', new_order_path %>
