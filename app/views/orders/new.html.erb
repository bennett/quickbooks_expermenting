<h1>New order</h1>

<% form_for(@order) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :descrption %><br />
    <%= f.text_area :descrption %>
  </p>
  <p>
    <%= f.label :starts_on %><br />
    <%= f.date_select :starts_on %>
  </p>
  <p>
    <%= f.label :ends_on %><br />
    <%= f.date_select :ends_on %>
  </p>
  <p>
    <%= f.label :customer_id %><br />
    <%= f.text_field :customer_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', orders_path %>
